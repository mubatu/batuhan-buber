---
import Layout from '../layouts/Layout.astro';
import ResumeComponent from '../components/Resume.tsx';
import '../styles/global.css';

// Resume data
const resumeData = {
  education: [
    {
      schoolName: 'Bogazici University',
      degree: 'B. Sc. in Computer Engineering',
      location: 'Istanbul, Turkey',
      date: 'Sep 2021 - Jun 2026',
      expected: true
    }
  ],
  experience: [
    {
      companyName: 'Turkish Technology',
      title: 'Database Engineer (Part-Time)',
      location: 'Istanbul, Turkey',
      date: 'Jun 2025 - Present'
    },
    {
      companyName: 'Fibabanka',
      title: 'Database Administrator (Intern)',
      location: 'Istanbul, Turkey',
      date: 'Jun 2024 - Jun 2025'
    }
  ]
};
---

<Layout title="Resume">
  <main class="flex justify-center items-center max-w-4xl mx-auto px-6 pt-40 pb-20">
    <ResumeComponent 
      client:only="react"
      education={resumeData.education}
      experience={resumeData.experience}
    />
  </main>
</Layout>
